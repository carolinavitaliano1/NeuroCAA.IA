  <!-- FIREBASE -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth-compat.js"></script>

  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyDPwPgsjw0bUrwfvt7242MGEekOdKuT1_8",
      authDomain: "neurocaa-1460e.firebaseapp.com",
      projectId: "neurocaa-1460e",
      appId: "1:788969719580:web:fce897a25a2f46dcdadcd9"
    };

    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    const params = new URLSearchParams(window.location.search);
    const oobCode = params.get("oobCode");

    function reset() {
      const password = document.getElementById("password").value;
      const msg = document.getElementById("msg");

      if (password.length < 6) {
        msg.innerText = "A senha deve ter no m√≠nimo 6 caracteres";
        return;
      }

      auth.confirmPasswordReset(oobCode, password)
        .then(() => {
          alert("Senha redefinida com sucesso!");
          location.href = "login.html";
        })
        .catch(() => {
          msg.innerText = "Link inv√°lido ou expirado";
        });
    }
  </script>

